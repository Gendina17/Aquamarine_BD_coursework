<div id="client_page">
	<div id="client_prof">
		<div id="client_name"><%= @client.name%></div>
		<hr>
		<div>
			<img id="client_avatar" src="<%= @client.avatar%>" width="800" >
		</div>
		<hr>
		<div id="about_company_tit">About company:</div>
		<div id="about_company">
			Industry: <%= @client.industry%><br>
			We cooperate since <%= @client.start_of_cooperation%><br>
			<%= @client.successful_orders%> successful orders completed<br>
			Curator: <a data-toggle="modal" data-target="#exampleModal" class="to_comp_t"> <%= @client.staff.name%> <%= @client.staff.surname%></a>
			
		</div>
	</div>
	<span id="order" style="padding-left: 95px;">Рекламные заказы:</span>
	<div class="horizontal-scroll-wrapper-c squares-c par client_scroll">
		<% @client.orders.each do |order|%>
		<div>
			<div id="product"><%= order.product%> </div>
			<div id="type_product">(<%= order.type_product%>)</div>
			<div id="platf_kind">
				<%= order.advertesiment_kind.kinds%> in <%= order.advertesiment_kind.platform.name%>
			</div>
			
			<div class="coorator">Influencers:</div>
			<% order.influencers.each do |influencer|%>
			<a href="../../profile/<%= influencer.id %>" id="to_comp">  <div id="inf_nick">@<%= influencer.nick%></div> </a>
			<%end%>
			<div class="coorator">Curator:</div> <span class="to_comp"  >  <%= order.staff.name%> </span>
		</div>
		<%end%>
	</div>
</div>
<div class="modal fade sizet cent" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog sizet" role="document">
		<div class="modal-content sizet color">
			<div class="modal-header sizet color2">
				<h5 class="modal-title sizet" id="exampleModalLabel">Curator</h5>
				<a   class="krest" data-dismiss="modal" aria-label="Close" >
					<img src="../assets/крест.png" width="40" >
				</a>
			</div>
			<div id="tuda" class="modal-body" >
				<div class="card_staff" style="background:url('../assets/узор.png'); height: 3000px;">
					<img src="<%=@curator.avatar%>" class="big" >
					<div class="curator_inf">
						<div id="cur_name"><%=@curator.name%> <%=@curator.surname%></div>
						Position: <%=@curator.position%><br>
						Work experience: <%=@curator.work_experience%><br>
						Number of orders: <%=@curator.number_of_orders%><br>
						Mail: <%=@curator.mail%><br>
					</div>
				</div>
			</div>
			
		</div>
	</div>
</div>
